configuration {
    display-drun: " > ";
    drun-display-format: "{icon} {name}";
    show-icons: true;
    icon-theme: "Papirus";
    
    matching: "fuzzy";
    sort: true;
    sorting-method: "levenshtein";

    timeout {
        action: "kb-cancel";
        delay: 0;
    }

    filebrowser {
        directories-first: true;
        sorting-method: "name";
    }
}


@theme "~/.config/rofi/theme.rasi"
