// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 26, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    "reload_style_on_change": true,

    // Choose the order of the modules
    "modules-left": [
	"group/group-cpu",
        "hyprland/workspaces",
        "mpris"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
	"cava",
        "tray",
        "pulseaudio",
	"gamemode",
        "network",
        "backlight",
	"power-profiles-daemon",
        "battery",
        "clock",
        "group/group-power",
    ],
    // Modules configuration
    "hyprland/workspaces": {
	 "disable-scroll": true,
	 "all-outputs": true,
	 "warp-on-scroll": false,
	 "format": "{icon}",
	 "format-icons": {
		"1": "î£",
		"2": "î£",
		"3": "î£",
		"4": "î£"
	 },
	 "persistent-workspaces": { "*": [1] }
	 },
    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            "(.*) â€” Mozilla Firefox": "$1",
	    ".*YouTube.*": "YouTube â€” Mozilla Firefox"
        },
        "separate-outputs": true
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ó°”¡",
            "deactivated": "ó°¨™"
        },
        "tooltip": true,
        "tooltip-format-activated": "Idle Inhibitor On",
        "tooltip-format-deactivated": "Idle Inhibitor Off"
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10,
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },
    "clock": {
        "format": "{:%I:%M %p}",
        "tooltip-format": "{:%A, %B %d, %Y}",
        "on-click": null
    },
    "cpu": {
        "format": "{usage}% ï‹›",
        "tooltip": false,       
                  
    },
    "memory": {
        "format": "{}% ïƒ‰",
        "tooltip": true,
        "tooltip-format": "{used:0.1f}G/{total:0.1f}G "
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}Â°C {icon}",
        "format": "{temperatureC}Â°C ", 
        "format-icons": ["ï«", "ï‹‰", "ï©"]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["ó°ƒœ", "ó°ƒ›", "ó°ƒš"],
	"scroll-step" : 5.0,
	"tooltip" : false


    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
	"interval": 2,
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ó°‚„",
        "format-plugged": "{capacity}% ï‡¦",
        //"format-alt": "{icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ó°º", "ó°¼", "ó°¾", "ó°‚", "ó°¹"]
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ïƒ§",
        "performance": "ïƒ§",
        "balanced": "ó°¾ž",
        "power-saver": "ï¬"
      }
    },
    "gamemode": {
		"format": "{glyph}",
		"format-alt": "{glyph} {count}",
		"glyph": "ïž³",
		"hide-not-running": true,
		"use-icon": true,
		"icon-name": "input-gaming-symbolic",
		"icon-spacing": 4,
		"icon-size": 20,
		"tooltip": true,
		"tooltip-format": "Games running: {count}"
     },
     "network": {
        //"interface": "en*,wl*", // (Optional) To force the use of this interface
        "format-wifi": "{ifname}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) ï‡«",
        "format-ethernet": "{ifname}",
        "tooltip-format-ethernet": "{ipaddr}/{cidr} ó°ˆ€",
        //"format-disabled": "DISABLED",
        //"tooltip-format-disabled": "No network devices found",
        "format-linked": "{ifname} (No IP) ïž–",
        "format-disconnected": "Disconnected âš ",
        //"format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "kitty -e nmtui"        
    },
    "pulseaudio": {
        "scroll-step": 5, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}%  {icon}",
        "format-bluetooth-muted": "ïš© {icon}",
        "format-muted": "ïš© ",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï€¥",
            "headset": "ï€¥",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-click": "pavucontrol"
    },
    "cava": {
        "framerate": 144,
        "autosens": 0,
        "sensitivity": 10,
        "bars": 14,
        "lower_cutoff_freq": 500,
        "higher_cutoff_freq": 10000,
	"sleep_timer": 2,
        "hide_on_silence": true,
        //"format_silent": "quiet",
        "method": "pulse",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "format-icons": ["â–", "â–‚", "â–ƒ", "â–„", "â–…", "â–†", "â–‡", "â–ˆ" ],
        "actions": {
                   "on-click-right": "mode"
                   }
    },

    "mpris": {
	"format": "{dynamic}",
	"format-paused": "{dynamic}",
        "format-stopped": "",
        "interval": 2,
        "dynamic-order": ["title","artist"],
        "tooltip-format": "{player}({status})",
        "dynamic-importance-order": ["title","artist"],
        "title-len": 30,
	"artist-len": 20,
        "max-len": 30,
        "ellipsis": "...",
	"ignored-players": ["firefox"]
    },

    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ï†¼",
            "default": "ðŸŽœ"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },

     "group/group-cpu": {
         "orientation": "inherit",
         "drawer": {
             "transition-duration": 500,
             "children-class": "not-cpu",
             "transition-left-to-right": true,
         },
         "modules": [
              "custom/cputoggle", // First element is the "group leader" and won't ever>
              "cpu",
	      "memory",
	      "temperature",
         ]
    },    
    "group/group-power": {
   	 "orientation": "inherit",
   	 "drawer": {
       	     "transition-duration": 500,
             "children-class": "not-power",
             "transition-left-to-right": false,
         },
   	 "modules": [
              "user", // First element is the "group leader" and won't ever be hidden
              "idle_inhibitor",
	      "custom/quit",
              "custom/lock",
              "custom/reboot",
	      "custom/sleep",
	      "custom/power",
   	 ]
    },

    "custom/quit": {
   	 "format": "ó°—¼",
   	 "tooltip": false,
   	 "on-triple-click": "hyprctl dispatch exit"
    },
    "custom/lock": {
   	 "format": "ï€£",
    	 "tooltip": false,
   	 "on-click": "hyprlock"
    },
    "custom/reboot": {
    	"format": "î«’",
    	"tooltip": false,
    	"on-triple-click": "reboot"
    },
    "custom/power": {
    	"format": "ï€‘",
    	"tooltip": false,
    	"on-triple-click": "shutdown now"
    },
    "custom/sleep": {
        "format": "ó°¤„",
        "tooltip": false,
        "on-double-click": "systemctl suspend"
    },
    "custom/cputoggle": {
        "format": "î¸•",
        "tooltip": false,
	"on-click": "rofi -show drun",
    },
    "user": {
        "format": "{user}",
        "interval": 60,
        "height": 30,
        "width": 30,
        "icon": true,
	}
}


